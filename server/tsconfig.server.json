{
  "compilerOptions": {
    // --- Configuração de Saída ---
    "outDir": "./dist",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ES2020",

    // --- Padrões do Node.js ---
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // --- Rigor e Qualidade de Código ---
    "strict": true
  },
  "include": [
    "*.ts",
    "_core/**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
